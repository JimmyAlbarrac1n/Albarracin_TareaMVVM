<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JimmyAlbarracinApuntesMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ja_views="clr-namespace:JimmyAlbarracinApuntesMauiApp.JA_Views"
    Shell.FlyoutBehavior="Flyout"
    Title="JimmyAlbarracinApuntesMauiApp">

    <FlyoutItem Title="Notes" Icon="icon_notes.png">
        <ShellContent
        Title="Notes"
        ContentTemplate="{DataTemplate ja_views:JA_AllNotesPage}"
        Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />
    </FlyoutItem>
    <FlyoutItem Title="About" Icon="icon_about.png">
        <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate ja_views:JA_AboutPage}"
        Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />
    </FlyoutItem>

</Shell>
